<div class="page-header">
    <h1>VideoWall</h1>
</div>
<% if @walls.length>0 %>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="panel-title">Available Walls</h2>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                <% @walls.each do |wall| %>
                    <li class="list-group-item">
                        <button data-toggle="collapse" data-target="#<%=wall.id%>" class="btn btn-warning pull-right"><span class="glyphicon glyphicon-trash"></span></button>
                        <%= link_to(wall.name, {:controller => 'sections', :wall_id => wall.id}, :class => 'btn btn-success') %><span class="badge"><%= wall.sections.count %></span>
                        <div id="<%=wall.id%>" class="collapse">
                            <div class="panel panel-danger">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Are you sure you want to delete this wall?</h3>
                                </div>
                                <div class="panel-body">
                                    <%= link_to('Yes', {:action => 'delete', :id => wall.id}, :class => 'btn btn-danger') %>
                                    <button data-toggle="collapse" data-target="#<%=wall.id%>" class="btn btn-success">No</button>
                                </div>
                            </div>
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>
<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Create a Wall</h3>
    </div>
    <div class="panel-body">
        <%= error_messages_for(@wall) %>
        <%= form_for(:wall, :url => {:action => 'create'}) do |f| %>
            <%= render(:partial => "form", :locals => {:f => f}) %>
        <% end %>
    </div>
</div>